{#
/**
 * @file
 * Template for a single Content Radar result item.
 *
 * Available variables:
 * - item: The result item with:
 *   - entity: The entity object.
 *   - entity_type: The entity type machine name.
 *   - content_type: The bundle label.
 *   - id: Entity ID.
 *   - title: Entity title/label.
 *   - field_name: Field machine name.
 *   - field_label: Field label.
 *   - extract: Text extract with highlighted match.
 *   - status: Published status (if applicable).
 *   - changed: Changed timestamp.
 *   - langcode: Language code.
 *   - language: Language name.
 */
#}
<div class="result-item" data-entity-type="{{ item.entity_type }}" data-entity-id="{{ item.id }}">
  <div class="result-item-content">
    <h4 class="result-item-title">
      {% if item.entity.toUrl is defined %}
        <a href="{{ path(item.entity.toUrl.getRouteName, item.entity.toUrl.getRouteParameters) }}">{{ item.title }}</a>
      {% else %}
        {{ item.title }}
      {% endif %}
    </h4>
    
    <div class="result-item-meta">
      <span class="entity-type-badge">{{ item.entity_type }}</span>
      <span class="content-type">{{ item.content_type }}</span>
      {% if item.language %}
        <span class="language-badge">{{ item.language }}</span>
      {% endif %}
      {% if item.status is not null %}
        <span class="status-badge {{ item.status ? 'published' : 'unpublished' }}">
          {{ item.status ? 'Published'|t : 'Unpublished'|t }}
        </span>
      {% endif %}
      <span class="field-name">{{ 'Field: @field'|t({'@field': item.field_label}) }}</span>
    </div>
    
    <div class="result-item-extract">
      {{ item.extract|raw }}
    </div>
    
    <div class="result-item-actions">
      {% if item.entity.toUrl is defined %}
        <a href="{{ path(item.entity.toUrl.getRouteName, item.entity.toUrl.getRouteParameters) }}">{{ 'View'|t }}</a>
        {% if item.entity.hasLinkTemplate('edit-form') %}
          <a href="{{ path(item.entity.toUrl('edit-form').getRouteName, item.entity.toUrl('edit-form').getRouteParameters) }}">{{ 'Edit'|t }}</a>
        {% endif %}
      {% endif %}
    </div>
  </div>
</div>