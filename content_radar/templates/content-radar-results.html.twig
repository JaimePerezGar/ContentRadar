{#
/**
 * @file
 * Template for Content Radar search results.
 */
#}
<div class="content-radar-results">
  <div class="results-header">
    <h3>{{ 'Search Results'|t }}</h3>
    <div class="results-actions">
      {% if export_url %}
        <a href="{{ export_url }}" class="button button--small">{{ 'Export to CSV'|t }}</a>
      {% endif %}
    </div>
  </div>

  {% if total > 0 %}
    <div class="results-summary">
      {{ 'Found @count results for "@term"'|t({'@count': total, '@term': search_term}) }}
      {% if langcode %}
        {{ 'in @language'|t({'@language': langcode}) }}
      {% endif %}
    </div>

    <table class="table table-striped">
      <thead>
        <tr>
          <th><input type="checkbox" id="select-all-results" class="form-checkbox"></th>
          <th>{{ 'Entity Type'|t }}</th>
          <th>{{ 'Title'|t }}</th>
          <th>{{ 'Field'|t }}</th>
          <th>{{ 'Text Extract'|t }}</th>
          <th>{{ 'Language'|t }}</th>
          <th>{{ 'Status'|t }}</th>
          <th>{{ 'Actions'|t }}</th>
        </tr>
      </thead>
      <tbody>
        {% for item in results %}
          {% set checkbox_key = item.entity_type ~ ':' ~ item.id ~ ':' ~ item.field_name ~ ':' ~ item.langcode %}
          <tr>
            <td>
              <input type="checkbox" 
                     name="selected_items[{{ checkbox_key }}]" 
                     value="1" 
                     class="result-item-checkbox form-checkbox" 
                     data-entity-type="{{ item.entity_type }}">
            </td>
            <td>
              <span class="badge">{{ item.entity_type }}</span>
            </td>
            <td>
              <strong>{{ item.title }}</strong>
              <br>
              <small>{{ item.content_type }}</small>
            </td>
            <td>{{ item.field_label }}</td>
            <td>
              <div class="text-extract">{{ item.extract|raw }}</div>
            </td>
            <td>{{ item.language }}</td>
            <td>
              {% if item.status is not null %}
                {% if item.status %}
                  <span class="status status--published">{{ 'Published'|t }}</span>
                {% else %}
                  <span class="status status--unpublished">{{ 'Unpublished'|t }}</span>
                {% endif %}
              {% else %}
                -
              {% endif %}
            </td>
            <td>
              {% if item.entity.toUrl is defined %}
                <a href="{{ path(item.entity.toUrl.getRouteName, item.entity.toUrl.getRouteParameters) }}" class="button button--small">{{ 'View'|t }}</a>
                {% if item.entity.hasLinkTemplate('edit-form') %}
                  <a href="{{ path(item.entity.toUrl('edit-form').getRouteName, item.entity.toUrl('edit-form').getRouteParameters) }}" class="button button--small">{{ 'Edit'|t }}</a>
                {% endif %}
              {% else %}
                <a href="{{ path('entity.' ~ item.entity_type ~ '.canonical', {(item.entity_type): item.id}) }}" class="button button--small">{{ 'View'|t }}</a>
                <a href="{{ path('entity.' ~ item.entity_type ~ '.edit_form', {(item.entity_type): item.id}) }}" class="button button--small">{{ 'Edit'|t }}</a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% else %}
    <div class="no-results">
      {{ 'No results found.'|t }}
    </div>
  {% endif %}
</div>